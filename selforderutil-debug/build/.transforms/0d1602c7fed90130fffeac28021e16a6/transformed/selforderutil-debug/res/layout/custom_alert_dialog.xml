<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    android:layout_width="400dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_main_disable_text_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alert_dialog_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="30dp"
            android:text="@string/Hint_Server"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/edit_item_text_size"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alert_dialog_text_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_item_text_size"
            android:id="@+id/option_save_id"
            android:background="@drawable/bt_paynow"
            android:layout_weight="1"
            android:text="@string/Hint_Save" />

        <Button
            android:layout_height="@dimen/edit_item_text_size"
            android:layout_width="wrap_content"
            android:id="@+id/option_cancel_id"
            android:background="@drawable/bt_paynow"
            android:layout_weight="1"
            android:text="@string/Hint_Cancel" />
    </LinearLayout>
</LinearLayout>